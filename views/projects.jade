extends layout

block sidebar-left
	div(class='sidebar-left')

block content
	div(class='content')
		h1=title
		if projects
			each project in projects
				if project['img']
					img(class="image" src="#{project['img']}")
				a(class="project-row" href="/projects/#{project['id']}")
					p(class="name") #{project['name']}
					p(class="description") <tab/>#{project['description']} 
		else 
			p There is no project registered right now.

block sidebar-right
	div(class='sidebar-right')